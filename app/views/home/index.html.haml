%body
  .centrecontainer
    .outercontainer
      .header
        %h2 Welcome to Weightd
        .menu
      .container
        .containerleft{:style => "background-image: url(#{image_path "power_barbell.gif"})"}

        .containerright
          %h2 Workout

          .exercise
            %label{:for => "exercise"} Exercise
            %input{:type => "text", :id => "exercise"} 
            %br

          .inputs
            %label{:for => "weight"} Weight
            %input{:type => "text", :id => "weight"} 

            %label{:for => "reps"} Reps
            %input{:type => "text", :id => "reps"} 

            %label{:for => "sets"} Sets
            %input{:type => "text", :id => "sets"} 

          %input{:type => "submit", 
            :value => "Add",
            :class => "add"}

          %input{:type => "submit", 
            :value => "Submit",
            :style => "display:none;",
            :class => "submit"}

          %a.twitter-share-button-template{"data-related" => "sets_across", 
            "data-size" => "large", 
            "data-text" => "", 
            "data-dnt" => "true",
            "data-count" => "none",
            "data-url" => "none",
            :style => "display:none;",
            :href => "https://twitter.com/share"}
          .twitter-share-button-div

          .lift{:style => "display:none;"}
            %table
              %tr
                %td Exercise
                %td Weight
                %td Reps
                %td Sets
              %tr
                %td{:id => "lift_exercise"}
                %td{:id => "lift_weight"}
                %td{:id => "lift_reps"}
                %td{:id => "lift_sets"}

      %h2 A Site for Strength
