%body
  .centrecontainer
    .outercontainer
      .header
        %h2 Welcome to Weightd
        .menu
      .container
        .containerleft{:style => "background-image: url(#{image_path "power_barbell.gif"})"}

        .containerright
          %h2 Workout

          .exercise
            %label{:for => "exercise"} Exercise
            %input{:type => "text", :id => "exercise"} 
            %br

          .inputs
            %label{:for => "weight"} Weight
            %input{:type => "text", :id => "weight"} 

            %label{:for => "reps"} Reps
            %input{:type => "text", :id => "reps"} 

            %label{:for => "sets"} Sets
            %input{:type => "text", :id => "sets"} 

          %input{:type => "submit", 
            :value => "Add",
            :class => "add"}

          %input{:type => "button", 
            :value => "Share",
            :class => "share",
            :style => "display:none"}

          = render "twitter_button"

          .lift{:style => "display:none;"}
            = render "lift_log"

      %h2 A Site for Strength
